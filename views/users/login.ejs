<% layout('layouts/boilerplate') %>

    <h2 class="text-center text-white fs-1 mt-4">Login</h2>

    <div class="card m-auto mt-4 bg-dark text-white border-0 col-sm-9 col-md-6">
        <div class="card-body">

            <form action="/login" method="POST" class="validated-form" novalidate>

                <div class="mb-4">
                    <input placeholder="Username" class="form-control rounded-pill fs-5" type="text" id="username"
                        name="username" autofocus required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-4">
                    <input placeholder="Password" class="form-control rounded-pill fs-5" type="password" id="password"
                        name="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="d-flex justify-content-center mt-5">
                    <button class="btn btn-lg btn-success rounded-pill w-50">Login</button>
                </div>

            </form>

        </div>
    </div>