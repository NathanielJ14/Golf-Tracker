<% layout('layouts/boilerplate') %>

    <div>
        <h1 class="text-white">
            <%= user.username %>'s Dashboard
        </h1>
    </div>

    <div>
        <% for (let game of games) { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= game.course %>
                    </h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">
                        <%= new Date(game.date).toLocaleDateString() %>
                    </h6>
                </div>
            </div>
            <% } %>
    </div>