<% layout('layouts/boilerplate') %>

        <div class="row">
                <h1 class="text-center text-white fs-1 mb-3">New Game</h1>
                <div class="col-md-6 offset-md-3">
                        <form action="/games" method="POST" novalidate class="validated-form"
                                enctype="application/x-www-form-urlencoded">
                                <div class="mb-4">
                                        <input class="form-control rounded-pill fs-5" type="text" id="course"
                                                name="game[course]" placeholder="Course Name" required>
                                </div>

                                <h3 class="text-white text-center mb-3">Scores</h3>


                                <div class="d-flex w-100 justify-content-center">
                                        <button class="btn btn-lg btn-success rounded-pill w-50">Create
                                                New
                                                Game</button>
                                </div>
                        </form>
                </div>
        </div>